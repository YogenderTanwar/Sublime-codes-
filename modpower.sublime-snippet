int power(int a, int b)
{
	int res = 1;
	while (b)
	{
		if (b % 2) b-- , res = (res % MOD * a % MOD) % MOD;
		else b = b / 2 , a = (a % MOD * a % MOD) % MOD;

	}
	return res;
}

